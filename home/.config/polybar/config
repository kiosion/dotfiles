[module/pulseaudio-control]
type = custom/script

tail = true
label-padding = 2
label-foreground = ${colors.foreground}

label-muted = Muted
label-muted-foreground = #666

# Icons mixed from FA5 and Material Icons
# exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "alsa_output.usb-Audioengine_Audioengine_2_-00.analog-stereo:   Speakers" --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo:   Headphones" listen

exec = pulseaudio-control --sink-nicknames-from "device.description" --sink-nickname "alsa_output.usb-Audioengine_Audioengine_2_-00.analog-stereo: Speakers" --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo: Headphones" listen

click-right = pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
click-left = pulseaudio-control togmute
click-middle = exec pavucontrol &
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

format-prefix = "VOL "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #5761ee

