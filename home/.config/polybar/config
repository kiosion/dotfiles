;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #adadad
primary = #5761ee
secondary = #b2b3f4
alert = #f2e884

[bar/wide]
monitor = DP-4 
width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
;fixed-center = true 
;bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

